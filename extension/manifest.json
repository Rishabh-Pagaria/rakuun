{
  "manifest_version": 3,
  "name": "Rakuun",
  "version": "1.0",
  "description": "Generate personalized emails based on webpage content.",
  "permissions": ["storage", "activeTab","identity","identity.email"],
  "icons":{
    "128": "icons/logo.png"
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
